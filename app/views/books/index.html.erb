<h2>Books</h2>
 <table>
   <thead>
     <th>Title</th>
     <th>Body</th>
     <th colspan = "3"></th>
   </thead>
 </table>

<% @books.each do |book| %>
 <table>
   <tbody>
     <tr>
       <td><%= book.title%></td>
       <td><%= book.body%></td>
       <td><%= link_to "show", book_path(book.id)%></td>
       <td><%= link_to "Edit", book_path(book.id)%></td>
       <td><%= link_to "Destroy", book_path(book.id)%></td>
     </tr>
   </tbody>
 </table>

<% end %>
